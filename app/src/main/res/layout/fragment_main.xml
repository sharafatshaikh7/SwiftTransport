<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.swifttransport.Fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:id="@+id/Top"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/cv_client_details"
            app:cardUseCompatPadding="true"
            style="@style/cardview_padding"
            android:layout_weight="1"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Clients"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"/>



            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cv_driver_details"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            style="@style/cardview_padding"
            app:cardElevation="5dp"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Drivers"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView2" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/driver"
                    android:layout_above="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView2" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/Top"
        android:id="@+id/Middle"
        android:layout_marginTop="0dp"
        android:layout_height="120dp">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/cv_monthly_income"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            style="@style/cardview_padding"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/income"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Monthly Income"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"/>



            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cv_monthly_expenses"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            style="@style/cardview_padding"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/expenses"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Monthly Expenses"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"/>



            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/Middle"
        android:id="@+id/Down"
        android:layout_marginTop="0dp"
        android:layout_height="120dp">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:id="@+id/cv_vehicel_details"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            style="@style/cardview_padding"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Vehicles Details"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vehicle1"
                    android:layout_above="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView3" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:id="@+id/cv_bussiness_details"
            style="@style/cardview_padding"
            app:cardUseCompatPadding="true"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/mainbuttonback"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/status"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/maineditback"
                    android:text="Business Status"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/textcolor"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

   <android.support.design.widget.CoordinatorLayout
       android:layout_width="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_height="wrap_content">


       <android.support.design.widget.FloatingActionButton
           android:id="@+id/fab"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_gravity="bottom|end"
           android:layout_marginRight="10dp"
           android:layout_marginBottom="40dp"
           app:srcCompat="@drawable/wallet" />

       <TextView
           android:text="Swift Transport "
           android:gravity="center"
           android:layout_marginTop="20dp"
           android:textSize="18dp"
           android:padding="5dp"
           android:textStyle="bold"
           android:textColor="@color/textcolor"
           android:background="@color/primary"
           android:layout_gravity="bottom|end"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

   </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
