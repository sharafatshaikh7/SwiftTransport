<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.swifttransport.Fragments.ClientAccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/_10"
                android:layout_marginRight="@dimen/_5"
                android:layout_marginLeft="@dimen/_10"
                android:layout_marginBottom="@dimen/_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_30"
                app:cardCornerRadius="@dimen/_10"
                app:cardElevation="@dimen/_5">

                <com.swifttransport.customeViews.EditTextCustom
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/fromdate"
                    android:gravity="center"
                    android:background="@null"
                    android:focusableInTouchMode="false"
                    android:id="@+id/edt_clientAccount_from_date"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/_10"
                android:layout_marginRight="@dimen/_10"
                android:layout_marginLeft="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_30"
                app:cardCornerRadius="@dimen/_10"
                app:cardElevation="@dimen/_5">

                <com.swifttransport.customeViews.EditTextCustom
                    android:layout_width="match_parent"
                    android:hint="@string/todate"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15"
                    android:background="@null"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:id="@+id/edt_clientAccount_to_date"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/dontknow"
            android:layout_marginRight="@dimen/_10"
            android:layout_marginLeft="@dimen/_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30"
            app:cardCornerRadius="@dimen/_10"
            app:cardElevation="@dimen/_5">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primary"
                android:textSize="@dimen/_18"
                android:paddingLeft="@dimen/_10"
                android:layout_marginRight="@dimen/_10"
                android:id="@+id/spi_client_paid_or_not"/>
            <!--android:background="@drawable/newspinnerback"-->

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5"
            android:orientation="horizontal"
            android:weightSum="3">


            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginRight="@dimen/_10"
                android:layout_marginLeft="@dimen/_10"
                app:cardCornerRadius="@dimen/_10"
                app:cardElevation="@dimen/_5"
                android:layout_marginBottom="@dimen/_10"
                android:layout_height="@dimen/_30">

                <Spinner
                    android:layout_width="match_parent"
                    android:entries="@array/PaidorNot2"
                    android:id="@+id/spi_client_paid_or_not_sub"
                    android:background="@drawable/newspinnerback"
                    android:layout_height="match_parent">
                </Spinner>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginRight="@dimen/_10"
                android:layout_marginLeft="@dimen/_10"
                android:layout_marginBottom="@dimen/_10"
                app:cardCornerRadius="@dimen/_10"
                app:cardElevation="@dimen/_5"
                android:layout_weight="1"
                android:layout_height="@dimen/_30">

                <Button
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/Submit"
                    android:id="@+id/btn_client_acc_search"
                    android:background="@drawable/buttonback2"
                    android:layout_height="match_parent" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_50"
                    android:clipToPadding="true"
                    android:id="@+id/client_account_list">
                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50"
                    android:weightSum="3"
                    android:background="@color/primary"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_alignParentBottom="true"
                        android:text="@string/Total"
                        android:gravity="center"
                        android:textSize="@dimen/_20"
                        android:textColor="@color/white"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="0dp"
                        android:id="@+id/txt_client_total"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="@dimen/_20"
                        android:textColor="@color/white"
                        android:layout_alignParentBottom="true"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:id="@+id/clientAccountList">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/primary"
                    android:text="No Data To Show"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
