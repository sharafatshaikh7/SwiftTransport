                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_daily_income_add1"-->
                        <!--android:layout_weight="1.8"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="15dp"-->
                        <!--android:typeface="monospace"-->
                        <!--android:text="@string/daily_incomeAdd1"-->
                        <!--android:textColor="@color/black"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_daily_income_add"-->
                        <!--android:layout_weight="2.2"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="15dp"-->
                        <!--android:typeface="monospace"-->
                        <!--android:text="@string/daily_incomeAdd1"-->
                        <!--android:textColor="@color/black"/>-->

                <!--</LinearLayout>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/daily_income_details_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/daily_income_details_less">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/less"
                    android:textSize="@dimen/_12"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="@color/primary"/>


            </RelativeLayout>
        </RelativeLayout>

</android.support.v7.widget.CardView>